{
  "name": "tasktracker-cli",
  "version": "2.1.2",
  "description": "A lightweight task management CLI for developers to track project tasks and technical debt from the command line",
  "main": "bin/tt",
  "bin": {
    "tasktracker": "./bin/tasktracker",
    "tt": "./bin/tt"
  },
  "preferGlobal": true,
  "scripts": {
    "start": "node ./bin/tt",
    "init": "node ./bin/tt init",
    "test": "node tests/test-runner.js",
    "test:core": "node tests/test-runner.js tests/test-core-commands.js",
    "install": "node install.js --auto",
    "postinstall": "node install.js --auto"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/tasktracker.git"
  },
  "keywords": [
    "task",
    "tracker",
    "project",
    "management",
    "developer",
    "cli",
    "git",
    "technical-debt",
    "ai-assistant",
    "cursor",
    "ide-integration"
  ],
  "author": "TaskTracker Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/username/tasktracker/issues"
  },
  "homepage": "https://github.com/username/tasktracker#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "dompurify": "^3.2.4",
    "fs-extra": "^10.1.0",
    "jsdom": "^26.0.0",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "eslint": "^8.29.0",
    "jest": "^29.3.1",
    "rimraf": "^3.0.2",
    "sinon": "^20.0.0"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
