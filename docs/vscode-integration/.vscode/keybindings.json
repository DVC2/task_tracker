[
  {
    "key": "ctrl+alt+t",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "tasktracker list\n" }
  },
  {
    "key": "ctrl+alt+n",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "tasktracker quick \"New task from VSCode\" feature\n" }
  },
  {
    "key": "ctrl+alt+c",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "tasktracker changes\n" }
  },
  {
    "key": "ctrl+alt+v",
    "command": "workbench.action.quickOpen",
    "args": {
      "placeHolder": "Enter task ID to view",
      "onSuccess": {
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "tasktracker view ${input}\n" }
      }
    }
  }
] 